{% extends 'base.html.twig' %}

{% block title %}Attitude Man Store{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/stylescard.css') }}">
{% endblock %}

{% block body %}
{# banni√®re image #}
<div class="container">
<img src="images/bannieresboutique/2.png" class="d-block mx-auto mb-5">

{# section icon accueil (maison) et search bar #}
<div class="search">
<form class="input-group my-2 d-flex justify-content-end">
            <input class="col-3 rounded-start" type="search" placeholder=" Chercher dans la boutique" class="form-control rounded" aria-describedby="search-addon" />
            <button class="btn btn-primary my-2 my-sm-0 col-1" type="submit"><i class="bi bi-search"></i></button>
</form>

<div class="home input-group my-2 d-flex justify-content-start">
<a href=""><i class="bi bi-house-door"></i></a>
</div>

</div>
</div>

{# product card #}

<div class="container mb-5"> 
  <div class="row g-2"> 
   
{% for product in products %}
<div class="col-md-3 d-flex justify-content-center">      
    <div class="card p-2"> 
{# if produit.promo is defined  #}
{# {% else %} #}
  
                        
                        <span class="percent">{{ product.discount }}</span> 
                        <div class="card-image">
                            
                                <a href="{{ path('attitudemanstore_show', {id: product.id}) }}"><img src="{{asset(product.photo)}}" class="img-fluid" width="220"></a> 

                        </div>  

                        <div class="card-inner">

                          <a href="{{ path('app_attitudemanstore') }}"><span>{{ product.nomBoutique }}</span></a>
                          <hr>
                            <a href="{{ path('attitudemanstore_show', {id: product.id}) }}"><h6 class="mb-0">{{ product.titreArticle }}</h6></a> 

                            <div class="mt-3 d-flex justify-content-between align-items-center">


                            <div class="price">
                                <span>{{ product.prix }}</span>
                                <sup><strike>{{ product.prixBefore }}</strike></sup>
                            </div>

                                <div class="d-flex flex-row">

                                    <span class="wishlist"><i class="bi bi-heart-fill"></i></span>
                                    <span class="cart"><i class="bi bi-cart3"></i></span>
                     </div>               
                   </div>
                </div>                         
              </div>   
            </div>
              {% endfor %}                
          </div>
       </div>

{% endblock %}

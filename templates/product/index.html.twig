{% extends 'base.html.twig' %}

{% block title %}Nos produits - Le Distributeur{% endblock %}

{% block body %}
<div class="row ">
<div class="container col-md-1">
<h1 class="mt-5 mb-4">Filtrer</h1>
    {{ form(form) }}
</div>

<div class="col-md-10">
<h1 class="mt-5 mb-4 text-center">Nos produits</h1>

<div class="container mb-5">
    <div class="row g-2">
    {% for product in products %}
        <div class="col-md-3 d-flex justify-content-center">
            <div class="card p-2 text-center">
                <a href="{{ path('product_show', {'slug' : product.slug})}}"><img src="images/product/{{ product.image }}" alt="{{product.titreArticle}}" class="img-fluid"></a>
                
                <div class="card-inner">
                    <h5>{{product.nomBoutique}}</h5>
                    <hr>

                    <span>{{product.titreArticle}}</span>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        {{ (product.prix / 100) | number_format(2, ',', '.') }} FCA
                    </div>
                    <div class="d-flex flex-row">
                        <span class="wishlist"><i class="bi bi-heart-fill"></i></span>
                        <span class="cart"><i class="bi bi-cart3"></i></span>
                    </div>
                </div>
            </div>
        </div>
{% endfor %} 
    </div>
</div>
</div>
</div>


{% endblock %}
